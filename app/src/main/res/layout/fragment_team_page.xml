<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="orbmatch"
            type="edmanfeng.paddamagecalculator.GameModel.OrbMatch"/>
    </data>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/team_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"/>


        <TextView
            android:id="@+id/combo_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/choose_orb_type_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_recycler_view"
            tools:text="Orb type"
            android:layout_marginStart="8dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/combo_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="197dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteHeight="24dp"
            app:layout_constraintLeft_toRightOf="@+id/combo_type_label"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/team_recycler_view"
            android:layout_marginStart="27dp"/>


        <TextView
            android:id="@+id/combo_orb_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_number_orbs_label"
            tools:text="# Orbs"
            tools:layout_conversion_absoluteX="104dp"
            tools:layout_conversion_absoluteY="181dp"
            tools:layout_conversion_absoluteWidth="40dp"
            tools:layout_conversion_absoluteHeight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_shape_label"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/combo_orb_number_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteX="104dp"
            tools:layout_conversion_absoluteY="197dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteHeight="24dp"
            android:layout_marginStart="40dp"
            app:layout_constraintLeft_toRightOf="@+id/combo_orb_number_label"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_shape_spinner"/>


        <TextView
            android:id="@+id/combo_enhance_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_number_enhanced_label"
            tools:text="# enhanced"
            tools:layout_conversion_absoluteX="192dp"
            tools:layout_conversion_absoluteY="181dp"
            tools:layout_conversion_absoluteWidth="73dp"
            tools:layout_conversion_absoluteHeight="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_type_label"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/combo_enhance_number_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteX="192dp"
            tools:layout_conversion_absoluteY="197dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteHeight="24dp"
            app:layout_constraintLeft_toRightOf="@+id/combo_enhance_number_label"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_type_spinner"/>


        <TextView
            android:id="@+id/combo_shape_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_shape_label"
            tools:text="Shape"
            tools:layout_conversion_absoluteX="280dp"
            tools:layout_conversion_absoluteY="181dp"
            tools:layout_conversion_absoluteWidth="39dp"
            tools:layout_conversion_absoluteHeight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_enhance_number_label"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/combo_shape_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_conversion_absoluteX="280dp"
            tools:layout_conversion_absoluteY="197dp"
            tools:layout_conversion_absoluteWidth="48dp"
            tools:layout_conversion_absoluteHeight="24dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_enhance_number_spinner"
            app:layout_constraintLeft_toRightOf="@+id/combo_shape_label"
            android:layout_marginLeft="42dp"/>

        <Button
            android:id="@+id/add_combo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_combo_button_text"
            tools:text="Add"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/team_recycler_view"
            app:layout_constraintLeft_toRightOf="@+id/combo_type_spinner"
            android:layout_marginLeft="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/combo_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_orb_number_spinner"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/combo_calculate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_combo_button_text"
            app:layout_constraintLeft_toRightOf="@+id/combo_recyclerview"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/add_combo_button"
            android:layout_marginStart="81dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="EXAMPLE"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/combo_calculate_button"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>